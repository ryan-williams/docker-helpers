
# Spawn a shell (/bin/bash) in the most recently-build Docker image (or an image passed as an argument)
defn dosh docker run -it --entrypoint /bin/bash
dshl() {
  image="$(docker images -a | head -n 2 | tail -n 1 | awk '{ print $3 }')"
  echo "Using latest image: $image"
  dosh "$@" "$image"
}
export -f dshl

dshc() {
  if [ $# -eq 0 ]; then
    container="$(docker ps '--format={{.ID}}' | head -n 1)"
    if [ -z "$container" ]; then
      container="$(docker container ls -l '--format={{.ID}}')"
      echo "No running containers; starting most recent container: $container"
      docker start "$container"
    else
      echo "Using first running container: $container"
    fi
  else
    container="$1"
    shift
    if ! docker ps -a '--format={{.ID}} {{.Names}}' | grep -q "$container"; then
      echo "Container doesn't appear to be running; startingâ€¦"
      docker start "$container"
    fi
  fi
  docker exec -ti "$@" "$container" /bin/bash
}
export -f dshc
defn dcsh dshc

